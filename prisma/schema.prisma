generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid()) // uuid v4
  login     String @unique
  password  String
  version   Int
  createdAt Int // timestamp of creation
  updatedAt Int // timestamp of last update
}
